<%- include('header') %>

<div class="ui grid">
  <div class="four wide column">
    <a class="avatar"
      href="/posts?author=<%= user._id %>"
      data-title="<%= user.name %> | <%= ({m: '♂', f: '♀', x: 'x'})[user.gender] %>"
      data-content="<%= user.bio %>">
      <img class="avatar" src="/img/<%= user.avatar %>" alt="<%= user.name %>头像">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" action="/posts/<%= post._id %>/edit" method="post">
      <div class="field required">
        <label>标题</label>
        <input type="text" name="title" value="<%= post.title %>">
      </div>
      <div class="field required">
        <label>正文</label>
        <textarea name="content" rows="15"><%= post.content %></textarea>
      </div>
      <div class="">
        <input type="submit" class="fluid ui button" value="发布">
      </div>

    </form>
  </div>
</div>

<%- include('footer') %>
